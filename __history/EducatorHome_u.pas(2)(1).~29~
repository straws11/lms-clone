  TfrmEducatorHome = class(TForm)
    PageControl1: TPageControl;
    TabSheet1: TTabSheet;
    TabSheet2: TTabSheet;
    dbgEnrolledStudents: TDBGrid;
    DBGrid1: TDBGrid;
    dbnEnrolledStudents: TDBNavigator;
