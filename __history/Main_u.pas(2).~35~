end;

procedure TfrmMain.btnHaveAccClick(Sender: TObject);
begin
pnlSignUp.Visible:= False;
pnlLogin.Visible:= True;
btnHaveAcc.Visible:= False;
btnNoAcc.Visible:= True;
//ALSO CLEAR FIELDS?
end;

